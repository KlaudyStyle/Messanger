<Window x:Class="MyMessagerClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="250" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Имя пользователя" Grid.Row="0" Margin="0,0,0,5"/>
        <TextBox x:Name="UsernameBox" Grid.Row="1" Margin="0,0,0,15"/>

        <TextBlock Text="Пароль" Grid.Row="2" Margin="0,0,0,5"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="3" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Войти" Click="Login_Click" Width="80"/>
            <Button Content="Регистрация" Click="Register_Click" Width="80" Margin="0,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
