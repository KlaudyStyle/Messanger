<Window x:Class="MessengerClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мессенджер" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0">
            <TextBlock Text="Имя пользователя:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="UsernameInput" Width="200" VerticalAlignment="Center"/>
            <Button x:Name="UseUsernameButton" Content="Использовать" 
                    Margin="10,0,0,0" Click="UseUsername_Click" VerticalAlignment="Center"/>
            <Button x:Name="LogoutButton" Content="Выйти" 
                    Margin="10,0,0,0" Click="Logout_Click" VerticalAlignment="Center"/>
        </StackPanel>

        <ListView x:Name="MessagesListView" Margin="10" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Время" 
                                   DisplayMemberBinding="{Binding CreatedAt, StringFormat='{}{0:HH:mm}'}"/>
                    <GridViewColumn Header="Пользователь" 
                                   DisplayMemberBinding="{Binding UserName}"/>
                    <GridViewColumn Header="Сообщение" 
                                   DisplayMemberBinding="{Binding Text}" Width="300"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="2">
            <TextBox x:Name="MessageInputBox" Width="600" Height="25" VerticalAlignment="Center"/>
            <Button x:Name="SendMessageButton" Content="Отправить" 
                    Margin="10,0,0,0" Width="100" Click="Send_Click" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>